<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.research.lemmeks.mockup.MainActivity">

    <Button
        android:text="Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_sbj_0"
        android:onClick="selectUser"
        android:textSize="18sp" />

    <Button
        android:text="User 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sbj_0"
        android:layout_alignStart="@+id/btn_sbj_0"
        android:id="@+id/btn_sbj_1"
        android:onClick="selectUser"
        android:textSize="18sp" />

    <Button
        android:text="User 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sbj_1"
        android:layout_alignStart="@+id/btn_sbj_1"
        android:id="@+id/btn_sbj_2"
        android:onClick="selectUser"
        android:textSize="18sp" />

    <Button
        android:text="User 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sbj_2"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_sbj_3"
        android:onClick="selectUser"
        android:textSize="18sp" />

    <Button
        android:text="User 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sbj_3"
        android:layout_alignStart="@+id/btn_sbj_3"
        android:id="@+id/btn_sbj_4"
        android:onClick="selectUser"
        android:textSize="18sp" />
</RelativeLayout>
